# --
#   I3 Bar
# --

bar {
    #status_command i3blocks -c /home/gumyo/.i3/i3blocks
    #status_command i3blocks
    i3bar_command i3bar -t
    position top
    font pango:Hack, FontAwesome 13
    strip_workspace_numbers yes
    separator_symbol " "
    bindsym button4 nop
    bindsym button5 nop
    tray_output eDP1
    tray_output LVDS-0
    tray_padding 0
    colors {
        background $semitransparent
	separator #757575
        #	            border            background         text
	focused_workspace   $transparent      $semitransparent   #64B5F6
	inactive_workspace  $semitransparent  $semitransparent   $inactive-text-color
	urgent_workspace    $urgent-bg-color  $semitransparent1  $text-color
    }
}


